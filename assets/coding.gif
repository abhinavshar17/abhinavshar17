<!-- Laptop with blinking code lines -->
<svg width="320" height="200" viewBox="0 0 320 200" xmlns="http://www.w3.org/2000/svg" aria-label="Laptop with blinking code">
  <defs>
    <linearGradient id="screenGrad" x1="0" x2="1">
      <stop offset="0" stop-color="#071428"/>
      <stop offset="1" stop-color="#0a2636"/>
    </linearGradient>
    <linearGradient id="bodyGrad" x1="0" x2="1">
      <stop offset="0" stop-color="#0b1220"/>
      <stop offset="1" stop-color="#121926"/>
    </linearGradient>
  </defs>

  <!-- laptop body -->
  <rect x="20" y="50" rx="8" ry="8" width="280" height="120" fill="url(#bodyGrad)"/>
  <!-- screen -->
  <rect x="36" y="60" rx="4" ry="4" width="248" height="88" fill="url(#screenGrad)"/>

  <!-- code lines (animated opacity) -->
  <g transform="translate(48,72)" fill="#94F9FF">
    <rect width="180" height="8" rx="3" opacity="0.9">
      <animate attributeName="opacity" values="0.15;0.9;0.15" dur="1.6s" repeatCount="indefinite"/>
    </rect>
    <rect y="14" width="150" height="8" rx="3" opacity="0.7">
      <animate attributeName="opacity" values="0.9;0.25;0.9" dur="1.8s" begin="0.2s" repeatCount="indefinite"/>
    </rect>
    <rect y="28" width="120" height="8" rx="3" opacity="0.6">
      <animate attributeName="opacity" values="0.2;0.85;0.2" dur="1.5s" begin="0.35s" repeatCount="indefinite"/>
    </rect>
    <rect y="42" width="170" height="8" rx="3" opacity="0.5">
      <animate attributeName="opacity" values="0.6;0.15;0.6" dur="1.9s" begin="0.5s" repeatCount="indefinite"/>
    </rect>
  </g>

  <!-- keyboard -->
  <rect x="24" y="140" width="272" height="8" rx="2" fill="#08121a"/>
  <rect x="60" y="150" width="200" height="6" rx="3" fill="#07121a"/>
  <!-- hinge -->
  <rect x="120" y="146" width="80" height="6" rx="3" fill="#0b1620"/>
</svg>
